{
  "title": "Change tab to Hyper/tab",
  "rules": [
    {
      "description": "Change tab to Hyper/tab",
      "manipulators": [
        {
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_command",
                "left_option"
              ],
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_command",
                "left_option"
              ],
              "lazy": false
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
