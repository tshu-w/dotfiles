{
  "title": "Caps, Ctrl, ESC and Return",
  "rules": [
    {
      "description": "Post escape if caps_lock is pressed alone, left_ctrl otherwise (Apple keyboards)",
      "manipulators": [
        {
          "conditions": [
            {
              "identifiers": [
                { "vendor_id": 1452 },
                { "vendor_id": 76 },
                { "is_built_in_keyboard": true }
              ],
              "type": "device_if"
            }
          ],
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Post escape if left_ctrl is pressed alone (not Apple keyboards)",
      "manipulators": [
        {
          "conditions": [
            {
              "identifiers": [
                { "vendor_id": 1452 },
                { "vendor_id": 76 },
                { "is_built_in_keyboard": true }
              ],
              "type": "device_unless"
            }
          ],
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Post right_control if return pressed with other keys",
      "manipulators": [
        {
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map left_ctrl to caps_lock",
      "manipulators": [
        {
          "conditions": [
            {
              "identifiers": [
                {
                  "description": "Apple Internal Keyboard",
                  "vendor_id": 1452
                }
              ],
              "type": "device_if"
            }
          ],
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Left and right shift together toggle caps_lock",
      "manipulators": [
        {
          "from": {
            "modifiers": {
              "optional": [
                "any"
              ]
            },
            "simultaneous": [
              {
                "key_code": "left_shift"
              },
              {
                "key_code": "right_shift"
              }
            ],
            "simultaneous_options": {
              "key_down_order": "insensitive",
              "key_up_order": "insensitive"
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
